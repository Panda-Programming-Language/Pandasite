section.panda-hero
  --breakpoint 70%
  relative _
  pallete 5

  &::before
    content ''
    display block
    absolute 0 0 _
    height var(--breakpoint)
    pallete 4
    clip-path polygon(0 0, 100% 0, 100% 100%, 0 calc(100% - 97px))

  > .container
    relative _
    z-index 1
    margin 177px _ 77px
