main
html
  height 100%

#app
body
  height 100%
  min-height 100%
  background color-2

.container
  --max-width 1177px

  width 100%
  max-width var(--max-width)
  margin _ auto

pre code.hljs.panda
  background transparent
  padding 0

for n in (1..3)
  .bg-{n}
    background lookup('color-' + n)

  .text-{n}
    color lookup('color-' + n)
