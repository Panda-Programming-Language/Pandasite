main
html
  height 100%

#app
body
  height 100%
  min-height 100%
  background color-2

.container
  --max-width 1177px

  width 100%
  max-width var(--max-width)
  margin _ auto

section
  --breakpoint 70%

  relative _
  height 100vh
  background linear-gradient(top, color-1 var(--breakpoint), color-2 var(--breakpoint))

  display flex
  align-items center

  > :not(svg)
    z-index 1

  svg
    size 100% auto

    absolute var(--breakpoint) _ _
    transform translateY(-100%)

    path
      fill #fff

pre code.hljs.panda
  background transparent
  padding 0

for n in (1..3)
  .bg-{n}
    background lookup('color-' + n)

  .text-{n}
    color lookup('color-' + n)
