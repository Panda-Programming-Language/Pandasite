:root
  {apply-colors}

html
  height 100%

main
  display flex
  flex-flow column
  min-height 100%

  // move footer down
  > :last-child
    margin-top auto

#app
body
  height 100%
  min-height 100%
  background pallete(5)

.container
  --max-width 1177px

  width 100%
  max-width var(--max-width)
  margin _ auto

pre code.hljs.panda
  background transparent
  padding 0

for n in (1..5)
  .bg-{n}
    background pallete(n)

  .text-{n}
    color pallete(n)

.bg-light
  background color-text-light

.bg-dark
  background color-text-dark

.text-light
  color color-text-light

.text-dark
  color color-text-dark
