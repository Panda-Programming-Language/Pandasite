.markdown

  h1 
    padding-top 124px
    margin-top -100px
    padding-bottom 20px
    @apply text-3xl

  h2
    padding-top 84px
    margin-top -60px
    padding-bottom 20px

  h3, h4, h5
    padding-top 64px
    margin-top -50px
    padding-bottom 12px
    color #808080

  p
    @apply my-2

  ul
    @apply list-disc
    @apply list-inside
    @apply py-4
    @apply px-6

  pre
    @apply my-5
    //background-color #19191c
    code
      background-color transparent
      color inherit

  code
    @apply text-sm
    @apply bg-grey
    //@apply text-green-600
    @apply my-6
    color #dd157c

  table
    @apply my-5
    border 1px solid #ddd 

    td, th
      @apply px-4 py-1

    th
      text-align: left
      @apply px-3